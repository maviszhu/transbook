<div class="col-md-12">
  <div class="row">
    <%= link_to("编辑", edit_admin_product_path(@product), class: "btn btn-primary pull-right") %>
  </div>
  <div class="col-md-6">
    <% if @product.image? %>
    <%= image_tag(@product.image_url(:normal)) %>
  <% else %>
    <%= image_tag("nopic-normal.jpg") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <ul class="list-unstyled">
      <li><%= simple_format(@product.description) %></li>
      <li>价格:&yen;<%= @product.price %></li>
      <li>库存:<%= @product.stock %></li>
      <li>是否隐藏:<% if @product.is_hidden? %>未上架<% else %>
        已上架
        <% end %></li>
    </ul>
  </div>
</div>
