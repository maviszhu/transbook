<div class="panel panel-default">
  <div class="panel-heading">
    <p class="text-center">订单号：<span><%= @order.token %></span>
    </p>
  </div>
  <div class="panel-body text-center">
    <h2>订单状态：<span><%= @order.aasm_state %></span>
    </h2>
  </div>
  <div class="panel-footer text-center">
    <p>
      <span><%= @order.aasm_state %></span>
    </p>
  </div>
</div>

<div class="well">
  <p>
    <span>购买人：</span>
    <span><%= @order.user.email %></span>
  </p>
  <p>
    <span>收货人：</span>
    <span><%= @order.shipping_name %></span>,<span><%= @order.shipping_address %></span>
  </p>
  <hr>

  <div class="order-info">
    <h3>订单信息</h3>
    <table>
      <tbody>
        <tr>
          <td>订单编号：<span><%= @order.token %></span>
          </td>
          <td>创建时间：<span><%= @order.created_at.to_s(:long) %></span>
          </td>
        </tr>
        <tr>
          <td>发货时间：<span>2017.01.23 13:00</span>
          </td>
          <td>收货：<span>2017.01.27 18:40</span>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <table class="table">
    <tbody>
      <tr>
        <td>
          <table class="in_tab">
            <tbody>
              <% @product_lists.each do |product_list| %>
              <tr>
                <td>图片</td>
                <td>
                  <%= product_list.product_name %>
                </td>
                <td>九五品</td>
                <td><%= product_list.quantity %></td>
                <td><%= product_list.product_price %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </td>
        <td>
          <p>订单总额(元)</p>
          <p><%= @order.total %>
            <span>RMB</span>
          </p>
          <p>(含运费：￥9.0)</p>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="text-right">
    <span>订单总金额:</span>
    <strong><%= @order.total %></stronog>
    <span>元</span>
  </div>

</div>
