<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag("carousel1.jpg", alt: "New York") %>
      <div class="carousel-caption">
        <h3>New York</h3>
        <p>The atmosphere in New York is lorem ipsum.</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag("carousel2.jpg", alt: "New York") %>
      <div class="carousel-caption">
        <h3>Chicago</h3>
        <p>Thank you, Chicago - A night we won't forget.</p>
      </div>
    </div>

    <div class="item">
      <%= image_tag("carousel3.jpg", alt: "New York") %>
      <div class="carousel-caption">
        <h3>LA</h3>
        <p>Even though the traffic was a mess, we had the best time.</p>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="row slide-list" id="productlists">
  <ul class="slide-item">
    <% @products.each do |product| %>
    <li class="col-md-5 book-item">
      <%= link_to(product_path(product)) do %>
      <div class="thumbnail">

        <% if product.image? %>
        <%= image_tag(product.image_url(:thumb), alt: "Product Pic") %>
      <% else %>
        <%= image_tag("item-img1.jpg", alt: "No Pic") %>
        <% end %>

      </div>
      <div class="item-details">
        <div class="bookface-img">
          <%= image_tag("30712461.jpg") %>
        </div>
        <% if product.stock == 0 %>
        <span class="label label-default">已售完</span>
      <% else %>
        <span class="book-price">&yen;<%= product.price %></span>
        <% end %>
        <div class="book-brief">
          <h3>
            <%= product.title %>
          </h3>
          <div class="book-quote">
            <p><%= product.description %></p>
          </div>

        </div>
      </div>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>

<div class="text-center">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
