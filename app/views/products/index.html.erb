<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-3">
    <div class="thumbnial">
      <%= link_to(product_path(product)) do %>
      <% if product.image? %>
      <%= image_tag(product.image_url(:thumb), alt: "Product Pic") %>
    <% else %>
      <%= image_tag("nopic-thumb.jpg", alt: "No Pic") %>
      <% end %>
      <% end %>
      <div class="caption">
        <h3><%= product.title %></h3>
        <p>&yen;<%= product.price %>
          <% if product.stock == 0 %>
          <span class="label label-default">已售完</span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <% end %>

</div>

<div class="pagination text-center">
  <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
