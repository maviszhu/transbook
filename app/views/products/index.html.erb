<% if @recommend_products.count > 0 %>
<!-- 轮播图片，展示推荐商品 -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @recommend_products.each_with_index do |recommend_product, index| %>
    <li data-target="#myCarousel" data-slide-to=<%= index %> class="<%= index == 1 ? 'active' : 'none' %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->

  <div class="carousel-inner" role="listbox">
    <% @recommend_products.each_with_index do |recommend_product, index| %>
    <div class="item <%= index == 1 ? 'active' : '' %>">
      <%= link_to(product_path(recommend_product)) do %>
      <!-- <% image_tag(recommend_product.bg_image.big.url, alt: "New York") %> -->
      <div class="slide">
        <%= image_tag(recommend_product.image.thumb.url) %>
        <p class="carousel-caption">
          <%= recommend_product.title %>
        </p>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<% end %>

<!-- 一般商品列表 -->
<div class="row slide-list" id="productlists">
  <ul class="slide-item">
    <% @products.each do |product| %>
    <li class="col-md-5 book-item">
      <%= link_to(product_path(product)) do %>
      <div class="bookadvert">
        <% if product.bg_image? %>
        <p><%= image_tag(product.bg_image_url) %></p>
      <% else %>
        <blockquote class='pull-right'><%= simple_format(truncate(product.description, length: 15)) %></blockquote>
        <% end %>
      </div>
      <% end %>

      <div class="item-details">
        <%= link_to(product_path(product)) do %>
        <div class="bookface-img">
          <% if product.image? %>
          <%= image_tag(product.image_url(:thumb), alt: "Product Pic") %>
        <% else %>
          <%= image_tag("30712461.jpg", alt: "No Pic") %>
          <% end %>
        </div>
        <% end %>
        <% if product.stock == 0 %>
        <span class="label label-default">已售完</span>
      <% else %>
        <span class="book-price">&yen;<%= product.price %></span>
        <% end %>
        <div class="book-brief">
          <h3>
            <%= link_to(product.title, product_path(product))  %>
          </h3>
          <div class="book-quote">
            <p style="font-size: 14px;">
              <span class="author">王小波</span>
              <span class="publisher">文学出版社</span>
            </p>
            <p>
              <span>九五品</span>
              <span>库存：<%= product.stock %></i>
            </span>
          </p>
          <% unless current_user.present? and current_user.is_admin %>
          <%= link_to add_to_cart_product_path(product), :method => :post, class: "btn pull-right", :remote => true do %>
          <i class="fa fa-shopping-cart text-center"></i>
          <% end %>
          <% end %>
        </div>

      </div>
    </div>

  </li>
  <% end %>
</ul>
</div>

<div class="text-center">
<%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
