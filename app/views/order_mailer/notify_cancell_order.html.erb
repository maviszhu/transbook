<div class="row">
  <div class="col-md-12">
    <h2>取消订单：</h2>
    <h3>
      订单明细<br>
      <small>
        <%= link_to("订单详情", order_url(@order.token)) %>
      </small>
    </h3>
    <table class="table">
      <thead>
        <tr>
          <th>商品明细</th>
          <th>单价</th>
          <th>数量</th>
          <th>小记</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
        <tr>
          <td><%= product_list.product_name %></td>
          <td><%= product_list.product_price %></td>
          <td><%= product_list.quantity %></td>
          <td><%= product_list.quantity * product_list.product_price %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <div class="total group clearfix">
      <h4 class="pull-right">
        总计<%= @order.total %>RMB
      </h4>
    </div>
    <hr>

    <h2>寄送信息</h2>

    <legend>收件人</legend>
    <p><%= @order.shipping_name %></p>
    <p><%= @order.shipping_address %></p>
  </div>
</div>
