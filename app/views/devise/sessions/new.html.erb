<div class="devise well center-block">
  <h2 class="text-center">登录</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: false, placeholder: '邮箱', required: false, autofocus: true %>
    <%= f.input :password, label: false, placeholder: '密码', required: false %>
    <%= f.input :remember_me, label: '记住我', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions center-block">
    <%= f.button :submit, "登录", class: "btn-primary btn-block"%>
  </div>
  <br/>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
