<div class="devise well center-block">
  <h2 class="text-center">Transbook欢迎您</h2>
  <hr>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "邮箱：", placeholder: '输入您的注册邮箱', required: false, autofocus: true %>
    <%= f.input :password, label: "密码：", placeholder: '输入密码', required: false %>
    <%= f.input :remember_me, label: '记住我', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions center-block">
    <%= f.button :submit, "登录", class: "btn-primary btn-block"%>
  </div>
  <br/>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
